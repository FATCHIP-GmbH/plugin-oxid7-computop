{% extends 'page/checkout/payment.html.twig' %}

{% block checkout_payment_errors %}
    {{ parent() }}
{% endblock %}

{% block checkout_payment %}
    {{ parent() }}
{% endblock %}

{% block change_payment %}
    {{ parent() }}
{% endblock %}

{% block select_payment %}
    {% set dynvalue = oView.getDynValue() %}

    {% if attribute(paymentmethod, 'isComputopPaymentMethod') is defined and paymentmethod.isComputopPaymentMethod() is same as(true) %}
        {% set paymentModel = paymentmethod.computopGetPaymentModel() %}
        {% if paymentModel.getCustomFrontendTemplate() is not same as(false) %}
            {% include paymentModel.getCustomFrontendTemplate() %}
        {% else %}
            {{ parent() }}
        {% endif %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}
